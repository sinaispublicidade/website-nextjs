generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  runtime       = "vercel-edge"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
}

model HomeContact {
  id        String   @id @default(uuid())
  nome      String
  email     String
  telefone  String
  empresa   String
  cargo     String
  mensagem  String
  createdAt DateTime @default(now())

  @@map("form_home")
}

model ServiceContact {
  id             String   @id @default(uuid())
  nome           String
  email          String
  telefone       String
  faturamento    String?
  produtoServico String?  @map("produto_servico")
  tipoServico    String?  @map("tipo_servico")
  createdAt      DateTime @default(now())

  @@map("form_services")
}

model BudgetContact {
  id           String   @id @default(uuid())
  nome         String
  email        String
  telefone     String
  cidadeEstado String   @map("cidade_estado")
  empresa      String
  ramoAtuacao  String   @map("ramo_atuacao")
  tipoServico  String   @map("tipo_servico")
  demanda      String
  createdAt    DateTime @default(now())

  @@map("form_budget")
}
